{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Person Schema",
  "description": "A schema for representing a person",
  "properties": {
    "name": {
      "type": "string",
      "description": "The person's full name",
      "minLength": 1
    },
    "age": {
      "type": "integer",
      "description": "The person's age in years",
      "minimum": 0,
      "maximum": 150
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "The person's email address"
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {"type": "string"},
        "city": {"type": "string"},
        "zipcode": {"type": "string", "pattern": "^[0-9]{5}$"}
      },
      "required": ["street", "city"]
    },
    "hobbies": {
      "type": "array",
      "items": {"type": "string"},
      "minItems": 0,
      "uniqueItems": true
    },
    "isActive": {
      "type": "boolean",
      "description": "Whether the person is active"
    }
  },
  "required": ["name", "age"],
  "additionalProperties": false
}