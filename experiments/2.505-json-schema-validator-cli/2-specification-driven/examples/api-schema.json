{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Response",
  "description": "Schema for API response data",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "error"]
    },
    "data": {
      "type": "object"
    },
    "message": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["status", "timestamp"],
  "additionalProperties": false
}